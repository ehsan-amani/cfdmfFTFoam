{
    inlet
    {
        //type            zeroGradient;
        type            fixedValue;
        value           uniform 1;
    }

    outlet
    {
        //type            zeroGradient;
        type            fixedValue;
        value           uniform 1;
    }
    walls
    {
        //type            zeroGradient;
        type            fixedValue;
        value           uniform 1;
    }
}

